<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>

      <field name="id" type="text" default="0" label="COM_FORMATIC_FORM_LBL_FORMATIC_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

      <field name="name" type="text"                
            label="COM_FORMATIC_FORM_LBL_FORMATIC_NAME"
            description="COM_FORMATIC_FORM_DESC_FORMATIC_NAME" 
            required="true" 
            filter="string" /> 

      <field name="created_by" type="createdby" default="" 
            label="COM_FORMATIC_FORM_LBL_FORMATIC_CREATED_BY"
            description="COM_FORMATIC_FORM_DESC_FORMATIC_CREATED_BY"  /> 

      <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

  </fieldset>

</form>
